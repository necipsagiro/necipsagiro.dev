doctype html
html(lang='en')
  head
    //- // Google tag (gtag.js)
    //- script(async='' src='https://www.googletagmanager.com/gtag/js?id=G-X8ZHYFMTRY')
    //- script.
    //-   window.dataLayer = window.dataLayer || [];
    //-   function gtag(){dataLayer.push(arguments);}
